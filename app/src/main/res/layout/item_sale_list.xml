<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_75"
    android:paddingLeft="@dimen/dimen_14">

    <TextView
        android:id="@+id/message_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/message_bg"
        android:padding="@dimen/dimen_2"
        android:text="@{listSaleDetail.typename}"
        android:textColor="@color/message_text_color"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/sale_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_9"
        android:layout_marginTop="@dimen/dimen_14"
        android:layout_toRightOf="@+id/message_label_tv"
        android:text="@{listSaleDetail.salemoney}"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_17" />

    <TextView
        android:id="@+id/sale_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sale_info_tv"
        android:layout_alignLeft="@id/sale_info_tv"
        android:layout_marginTop="@dimen/dimen_3"
        android:text="@{listSaleDetail.saletime}"
        android:textColor="@color/sale_time_text_color"
        android:textSize="@dimen/font_14" />
</RelativeLayout>