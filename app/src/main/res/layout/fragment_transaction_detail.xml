<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_bg"
        android:background="@color/white"
        android:id="@+id/titlebar_mypos_info">

        <ImageButton style="@style/topbar_return_img1"
            android:onClick="onReturnClick"/>

        <TextView
            style="@style/topbar_title"
            android:textColor="@color/alpha_9"
            android:layout_centerHorizontal="true"
            android:text="订单详情" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_11"
        android:background="@color/color_F5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_52"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="营业收入"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_17" />

        <TextView
            android:id="@+id/tv_order_detail_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:textColor="@color/button_normal"
            android:textSize="@dimen/font_17" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_11"
        android:background="@color/color_F5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/llCreditCardAuth"
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="付款方式" />

            <TextView
                android:id="@+id/tv_order_detail_pay_type"
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:gravity="right"
                android:text="信用卡认证" />
        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout
            android:id="@+id/llPOSApply"
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="交易卡号" />

            <TextView
                android:id="@+id/tv_order_detail_card_no"
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:gravity="right"
                android:text="张三" />

        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout
            android:id="@+id/llCustomerServiceOnline"
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="交易金额" />

            <TextView
                android:id="@+id/tv_order_detail_amount"
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:gravity="right"
                android:text="18017883972" />

        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="手续费" />

            <TextView
                android:id="@+id/tv_order_detail_fee"
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2018-07-30" />

        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="交易时间" />

            <TextView
                android:id="@+id/tv_order_detail_time"
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2018-07-30" />

        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="订单号" />

            <TextView
                android:id="@+id/tv_order_detail_no"
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2018-07-30" />

        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />

        <LinearLayout
            style="@style/content_item_white">

            <TextView
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="签购单" />

            <TextView
                android:id="@+id/tv_order_detail_purchase"
                style="@style/content_item_lf_tv"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2018-07-30" />

        </LinearLayout>

        <View style="@style/divider_horizontal_1px" />




    </LinearLayout>



    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recycler"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

</LinearLayout>