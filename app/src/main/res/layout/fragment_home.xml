<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/top_bg" />


    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_27"
        android:layout_marginTop="@dimen/dimen_17"
        android:layout_marginRight="@dimen/dimen_17"
        android:src="@mipmap/profile_icon" />

    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_17"
        android:layout_toRightOf="@+id/profile_iv"
        android:text="尹娟"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_22" />

    <TextView
        android:id="@+id/phone_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_17"
        android:layout_toRightOf="@+id/username_tv"
        android:text="12345678901"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_tv"
        android:layout_toRightOf="@+id/profile_iv"
        android:text="@string/slogan"
        android:textColor="@color/color_70white"
        android:textSize="@dimen/font_12" />

    <LinearLayout
        android:id="@+id/tab_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_iv"
        android:layout_marginTop="@dimen/dimen_36"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ordinary_tv"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/int_1"
            android:drawableTop="@mipmap/ordinary_icon"
            android:drawablePadding="@dimen/dimen_17"
            android:gravity="center"
            android:text="@string/ordinary"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/super_tv"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/int_1"
            android:drawableTop="@mipmap/superduty_icon"
            android:drawablePadding="@dimen/dimen_17"
            android:gravity="center"
            android:text="@string/superduty"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/qr_tv"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/int_1"
            android:drawableTop="@mipmap/qr_icon"
            android:drawablePadding="@dimen/dimen_17"
            android:gravity="center"
            android:text="@string/qr"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/quick_pass_tv"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/int_1"
            android:drawableTop="@mipmap/quick_pass_icon"
            android:drawablePadding="@dimen/dimen_17"
            android:gravity="center"
            android:text="@string/quick_pass"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/receipt_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_ly"
        android:layout_marginTop="@dimen/dimen_33"
        android:background="@mipmap/receipt_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_21"
            android:text="@string/receipt"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_38"
            android:background="@mipmap/imaginary_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="888,888.88"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_9"
                android:text="@string/month_total"
                android:textColor="@color/color_55black"
                android:textSize="@dimen/font_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="237,920.17"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/announcement_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_18"
        android:layout_below="@+id/receipt_ly"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_17"
        android:paddingRight="@dimen/dimen_20">

        <ImageView
            android:id="@+id/announcement_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_25"
            android:background="@mipmap/announcement" />

        <TextView
            android:layout_width="@dimen/dimen_0"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_ly"
            android:layout_marginRight="@dimen/dimen_41"
            android:layout_weight="@integer/int_1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="@integer/int_1"
            android:text="实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告实时公告"
            android:textColor="@color/announcement_text_color"
            android:textSize="@dimen/font_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@mipmap/detail" />
    </LinearLayout>

    <TextView
        android:id="@+id/sale_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcement_ly"
        android:layout_marginLeft="@dimen/dimen_17"
        android:layout_marginTop="@dimen/dimen_26"
        android:text="@string/last_sale"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_20" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sale_tv"
        android:layout_alignLeft="@+id/sale_tv"
        android:layout_marginTop="@dimen/dimen_4">

        <TextView
            android:id="@+id/no_data_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/nodata_bg"
            android:drawablePadding="@dimen/dimen_11"
            android:gravity="center_horizontal"
            android:text="@string/no_msg"
            android:textColor="@color/no_data_color"
            android:textSize="@dimen/font_12"
            android:visibility="invisible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sale_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>