<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="@integer/int_2"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:layout_marginTop="@dimen/dimen_23"
            android:gravity="center"
            android:text="结果"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_20" />

        <LinearLayout
            android:id="@+id/card_pay_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pay_result_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_41"
                android:background="@mipmap/succeed_icon" />

            <TextView
                android:id="@+id/pay_result_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="绑定成功"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/pay_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_9"
                android:text="你可以使用APP了"
                android:textColor="@color/color_succeed_text"
                android:textSize="@dimen/font_14" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        android:layout_weight="@integer/int_3"
        android:orientation="vertical">

        <Button
            android:id="@+id/go_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_31"
            android:background="@drawable/red_white_button_bg"
            android:text="@string/standing_business"
            android:textColor="@drawable/bt_text_color"
            android:textSize="@dimen/font_18" />

        <Button
            android:id="@+id/to_mypos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47"
            android:layout_margin="@dimen/dimen_16"
            android:background="@drawable/red_white_button_bg"
            android:text="@string/back_home"
            android:textColor="@drawable/bt_text_color"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

</LinearLayout>