<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_bg"
        android:id="@+id/titlebar_realname_result"
        >

        <ImageButton style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="身份证信息" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="55dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/result_success"
                    />

                <TextView
                    android:id="@+id/realname_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证成功"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:textSize="20sp"
                    android:visibility="gone"

                    />

                <LinearLayout
                    android:id="@+id/creadit_auth_result_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >


                    <TextView
                        android:id="@+id/creadit_auth_result_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:text="信用卡认证成功"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/creadit_auth_result_tx1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:text="请使用本卡做首笔交易"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/creadit_auth_result_tx2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="首笔交易金额需大于100元"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                </LinearLayout>



            </LinearLayout>




            <Button
                android:id="@+id/goto_credit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentBottom="true"
                style="@style/btn_next_style_red"
                android:text="前去认证信用卡"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/goto_realname_auth_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="36dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentBottom="true"
                style="@style/btn_white_nomal_style"
                android:text="查看实名信息"
                android:textColor="@color/black_overlay"
                android:textSize="15sp" />
        </LinearLayout>


</RelativeLayout>