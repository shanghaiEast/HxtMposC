<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_84"
    android:paddingHorizontal="@dimen/dimen_18">

    <ImageView
        android:id="@+id/pay_type_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zhongxin_logo"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/pay_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_9"
        android:layout_marginTop="@dimen/dimen_21"
        android:text="支付成功"
        android:layout_toRightOf="@+id/pay_type_iv"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_17" />

    <TextView
        android:id="@+id/pay_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pay_result_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_28"
        android:text="123"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_17" />

    <TextView
        android:id="@+id/pay_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_result_tv"
        android:layout_alignLeft="@+id/pay_result_tv"
        android:textColor="@color/color_line_bg"
        android:text="2019/12/13"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/pay_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pay_time_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_26"
        android:text="刷卡(2345)"
        android:textColor="@color/color_line_bg"
        android:textSize="@dimen/font_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_below="@+id/pay_num_tv"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@color/color_line_bg" />
</RelativeLayout>