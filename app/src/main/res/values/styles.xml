<resources xmlns:android="http://schemas.android.com/apk/res/android">



    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="btn_next_style_red">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_btn_red</item>
        <item name="android:height">45dp</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.NoTitleBar.Fullscreen">

        <!-- 闪屏背景，可用图片 -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="bottom_tab_ll" parent="ll_vertical_match_match">
        <item name="android:width">0dp</item>
    </style>

    <style name="bottom_tab_iv" parent="img_btn"></style>

    <style name="bottom_tab_tv" parent="text_micro">
        <item name="android:textColor">@color/black_to_white</item>
    </style>

    <style name="myAccount_items_text" >
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/right32</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="settings_items_text">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="settings_items">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/selector_settings_item_click</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>